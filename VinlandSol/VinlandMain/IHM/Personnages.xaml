<Window x:Class="VinlandSol.IHM.Personnages"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VinlandSol.IHM"
        mc:Ignorable="d"
        x:Name="PersonnagesWindow"
        Title="Personnages" Height="750" Width="1400">
    <Grid>
        <Label Content="Vinland" FontSize="100" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontFamily="/VinlandSol;component/IHM/fonts/Mjolnir.ttf#Mjolnir"/>
        <Label Content="Campagne - Personnages" FontSize="25" HorizontalAlignment="Center" Margin="0,125,0,0" VerticalAlignment="Top" FontFamily="/VinlandSol;component/IHM/fonts/Mjolnir.ttf#Mjolnir"/>
        <ListBox x:Name="PersonnagesListe" FontSize="40" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="100,250,800,160"/>
        <Button Content="Ajouter un personnage" FontSize="30" Margin="0,0,800,50" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="70" Width="500"/>
        <Label HorizontalAlignment="Left" Margin="910,180,0,0" Content="Informations :" FontSize="40" VerticalAlignment="Top"/>
        <Label Content="Nom de l'utilisateur :" Margin="710,300,340,0" VerticalAlignment="Top" FontSize="35" Height="55"/>
        <Label Content="Nom du personnage : " Margin="710,400,340,0" VerticalAlignment="Top" FontSize="35" Height="55"/>
        <Label Content="Date de création : " Margin="710,500,400,0" VerticalAlignment="Top" FontSize="35" Height="55"/>
        <Button Content="🗑" FontSize="40" Background="Red" Margin="0,0,20,50" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="70" Width="100" />
        <Button Content="🖉" FontSize="40" Margin="0,0,20,248" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="100" Background="{x:Null}" BorderThickness="0,0,0,0">
            <!--<Image Source="image crayon.png"></Image>-->
        </Button>
        <Button Content="Retour" FontSize="20" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="56" Width="121" Click="OuvrirCampagnes_Click"/>
        <Button Content="Selection de carte" FontSize="20" HorizontalAlignment="Left" Margin="1180,10,0,0" VerticalAlignment="Top" Height="56" Width="200" Click="OuvrirCartes_Click"/>

    </Grid>
</Window>
