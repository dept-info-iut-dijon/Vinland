        <Border BorderThickness="2" BorderBrush="Black" Grid.Column="2" Margin="10,255,192,51">
            <TextBox Margin="26,310,350,0" Grid.Column="2" />
        </Border>
        <Border BorderThickness="2" BorderBrush="Black" Grid.Column="2" Margin="10,337,192,337" Grid.RowSpan="3">
            <TextBox Margin="26,310,350,0" Grid.Column="2" />
        </Border>
        <TextBlock Text="rôle souhaité :" FontSize="45" Margin="373,89,0,218" HorizontalAlignment="Left" Grid.Row="2"/>
        <ComboBox Name="ChoixRole" Grid.Column="2" Margin="10,92,339,217" Grid.Row="2">
            <ComboBoxItem Content="Maitre du jeu"/>
            <ComboBoxItem Content="Joueur"/>
        </ComboBox>
        <Button x:Name="Creer" Content="Créer" Grid.ColumnSpan="4" Margin="584,212,584,73" Grid.Row="2" FontSize="45" />
    </Grid>
</Window>